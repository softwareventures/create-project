{
  "name": "@softwareventures/create-project",
  "version": "0.0.0-development",
  "description": "Create a TypeScript project with standard settings for Software Ventures Limited",
  "keywords": [
    "create-project",
    "typescript",
    "template"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/create-project",
  "bugs": "https://github.com/softwareventures/create-project/issues",
  "repository": "github:softwareventures/create-project",
  "license": "ISC",
  "scripts": {
    "prepare": "yarn run snyk-protect && shx rm -rf template/idea.template && shx cp -r .idea template/idea.template && tsc",
    "test": "ava",
    "lint": "eslint . && prettier --check .",
    "fix": "eslint --fix . && prettier --write .",
    "semantic-release": "semantic-release",
    "snyk-protect": "snyk protect"
  },
  "sideEffects": [
    "./index.js"
  ],
  "bin": {
    "create-project": "./index.js"
  },
  "dependencies": {
    "@softwareventures/array": "0.33.1",
    "@types/empty-dir": "2.0.0",
    "@types/jsdom": "16.2.3",
    "@types/node": "12.12.53",
    "@types/prettier-package-json": "2.1.0",
    "@types/recursive-readdir": "2.2.0",
    "empty-dir": "2.0.0",
    "jsdom": "16.3.0",
    "non-null": "2.0.1",
    "prettier-package-json": "2.1.3",
    "recursive-readdir": "2.2.2",
    "snyk": "1.366.2",
    "tslib": "2.0.0",
    "xml-formatter": "2.1.3",
    "yarn": "1.22.4"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "2.1.0",
    "@softwareventures/prettier-config": "1.0.2",
    "@softwareventures/semantic-release-config": "1.1.1",
    "@softwareventures/tsconfig": "2.2.0",
    "ava": "3.10.1",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.5.0",
    "prettier": "2.0.5",
    "semantic-release": "17.1.1",
    "shx": "0.3.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "snyk": true
}
