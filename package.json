{
  "name": "@softwareventures/maintain-project",
  "version": "0.0.0-development",
  "description": "Automatically create and maintain TypeScript projects with standard settings for Software Ventures Limited",
  "keywords": [
    "automated",
    "create-project",
    "maintain-project",
    "typescript",
    "template"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/maintain-project",
  "bugs": "https://github.com/softwareventures/maintain-project/issues",
  "repository": "github:softwareventures/maintain-project",
  "license": "ISC",
  "scripts": {
    "prepare": "shx rm -rf template/template/idea.template && shx cp -r .idea template/template/idea.template && tsc",
    "test": "ava",
    "lint": "eslint . && prettier --check .",
    "fix": "eslint --fix . && prettier --write .",
    "semantic-release": "semantic-release"
  },
  "sideEffects": [
    "./index.js"
  ],
  "bin": {
    "maintain-project": "./index.js"
  },
  "dependencies": {
    "@softwareventures/array": "3.5.2",
    "@softwareventures/chain": "0.1.2",
    "@types/empty-dir": "2.0.0",
    "@types/escodegen": "0.0.6",
    "@types/estree": "0.0.46",
    "@types/jsdom": "16.2.6",
    "@types/node": "12.19.15",
    "@types/prettier-package-json": "2.1.0",
    "@types/recursive-readdir": "2.2.0",
    "commander": "6.2.1",
    "empty-dir": "2.0.0",
    "escodegen": "2.0.0",
    "hosted-git-info": "3.0.8",
    "jsdom": "16.4.0",
    "non-null": "2.0.1",
    "prettier-package-json": "2.1.3",
    "recursive-readdir": "2.2.2",
    "tslib": "2.1.0",
    "xml-formatter": "2.4.0",
    "yarn": "1.22.10"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "3.4.2",
    "@softwareventures/prettier-config": "1.0.2",
    "@softwareventures/semantic-release-config": "1.1.1",
    "@softwareventures/tsconfig": "2.3.2",
    "ava": "3.15.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.18.0",
    "prettier": "2.2.1",
    "semantic-release": "17.3.7",
    "shx": "0.3.3",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/files"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "snyk": true
}
