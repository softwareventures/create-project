{
  "name": "@softwareventures/maintain-project",
  "version": "0.0.0-development",
  "description": "Automatically create and maintain TypeScript projects with standard settings for Software Ventures Limited",
  "keywords": [
    "automated",
    "create-project",
    "maintain-project",
    "template",
    "typescript"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/maintain-project",
  "bugs": "https://github.com/softwareventures/maintain-project/issues",
  "repository": "github:softwareventures/maintain-project",
  "license": "ISC",
  "scripts": {
    "fix": "tsc --noEmit && eslint --fix . && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "maintain-project": "node . update",
    "prepare": "shx rm -rf template/template/idea.template && shx cp -r .idea template/template/idea.template && tsc",
    "semantic-release": "semantic-release",
    "test": "ava"
  },
  "bin": {
    "maintain-project": "./index.js"
  },
  "sideEffects": [
    "./index.js"
  ],
  "engines": {
    "node": ">= 12"
  },
  "dependencies": {
    "@softwareventures/array": "4.1.2",
    "@softwareventures/chain": "0.1.2",
    "@softwareventures/date": "1.5.1",
    "@softwareventures/dictionary": "0.8.1",
    "@softwareventures/iterable": "1.2.0",
    "@softwareventures/nullable": "1.4.0",
    "@softwareventures/ordered": "1.0.0",
    "@types/empty-dir": "2.0.0",
    "@types/escodegen": "0.0.7",
    "@types/estree": "0.0.50",
    "@types/hosted-git-info": "3.0.2",
    "@types/jsdom": "16.2.13",
    "@types/node": "12.20.15",
    "@types/prettier-package-json": "2.1.0",
    "@types/recursive-readdir": "2.2.0",
    "@types/semver": "7.3.7",
    "@types/spdx-correct": "2.0.0",
    "@types/wordwrap": "1.0.1",
    "@types/yaml": "1.9.7",
    "commander": "8.0.0",
    "empty-dir": "2.0.0",
    "escodegen": "2.0.0",
    "hosted-git-info": "4.0.2",
    "jsdom": "16.6.0",
    "node-releases": "1.1.73",
    "non-null": "2.0.1",
    "prettier-package-json": "2.1.3",
    "recursive-readdir": "2.2.2",
    "semver": "7.3.5",
    "simple-git": "2.40.0",
    "spdx-correct": "3.1.1",
    "spdx-license-list": "6.4.0",
    "tslib": "2.3.0",
    "typescript": "4.3.5",
    "wordwrap": "1.0.0",
    "xml-formatter": "2.4.0",
    "yaml": "1.10.2",
    "yarn": "1.22.10"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "4.0.0",
    "@softwareventures/prettier-config": "1.0.2",
    "@softwareventures/semantic-release-config": "1.2.0",
    "@softwareventures/tsconfig": "5.1.0",
    "ava": "3.15.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.30.0",
    "prettier": "2.3.2",
    "semantic-release": "17.4.4",
    "shx": "0.3.3",
    "ts-node": "10.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/files"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "snyk": true
}
